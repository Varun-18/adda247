{
  "version": 2,
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["src/**/*"],
        "excludeFiles": ["src/tests/**/*"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/index.ts"
    }
  ],
  "functions": {
    "src/index.ts": {
      "maxDuration": 30,
      "runtime": "nodejs18.x"
    }
  },
  "installCommand": "npm install",
  "buildCommand": "npm run build"
}
